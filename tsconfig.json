{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build/compiled",
        "declaration": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2015"
        ]
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
