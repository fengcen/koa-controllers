{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "newLine": "LF",
    "types": [
      "node"
    ],
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
